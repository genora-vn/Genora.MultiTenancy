@page
@using Genora.MultiTenancy.Localization
@using Genora.MultiTenancy.Web.Pages.AppCustomerTypes
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<MultiTenancyResource> L
@{
    Layout = null;
}
<form abp-model="CustomerType" asp-page="/AppCustomerTypes/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["CreateAppCustomerType"].Value"></abp-modal-header>
        <abp-modal-body>
            @* <abp-form-content /> *@
            <div class="mb-3">
                <label asp-for="CustomerType.Code" class="form-label">@L["CustomerTypeCode"]</label>
                <input asp-for="CustomerType.Code" class="form-control" placeholder="Nhập mã code loại khách hàng" />
            </div>
            <div class="mb-3">
                <label asp-for="CustomerType.Name" class="form-label">@L["CustomerTypeName"]</label>
                <input asp-for="CustomerType.Name" class="form-control" placeholder="Nhập tên loại khách hàng" />
            </div>
            <div class="mb-3">
                <label asp-for="CustomerType.Description" class="form-label">@L["Description"]</label>
                <textarea asp-for="CustomerType.Description" class="form-control" rows="3" placeholder="Mô tả loại khách hàng"></textarea>
            </div>
            <div class="mb-3" style="display: inline-flex; width: 100%">
                <label asp-for="CustomerType.ColorCode" class="form-label">@L["ColorCode"]</label>
                <input asp-for="CustomerType.ColorCode" type="color" class="form-control color-input" />
            </div>
            <abp-input asp-for="CustomerType.IsActive" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>

<style type="text/css">
    .color-input {
        width: 60%;
        height: 50px;
        padding: 0;
        margin-left: 15%;
    }
</style>

