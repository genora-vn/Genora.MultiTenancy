@page
@using Genora.MultiTenancy.Localization
@using Genora.MultiTenancy.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MultiTenancyResource> L
@inject IAuthorizationService AuthorizationService
@inject Volo.Abp.MultiTenancy.ICurrentTenant CurrentTenant

@section scripts {
    <abp-script src="/Pages/AppZaloAuths/index.js" />
}

@{
    if (CurrentTenant.IsAvailable)
    {
        <div class="alert alert-warning">Host only.</div>
        return;
    }

    var canManage = await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.HostAppZaloAuths.Default);
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["AppZaloAuths"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (canManage)
                {
                    <abp-button id="NewAppZaloAuthButton"
                                text="@L["NewAppZaloAuth"]"
                                icon="plus"
                                button-type="Primary" />
                    <abp-button id="ZaloConnectBtn" text="@L["ZaloConnect"]" icon="link" button-type="Primary" />
                    <abp-button id="ZaloRefreshBtn" text="@L["ZaloRefreshNow"]" icon="sync" button-type="Secondary" />
                }
                <a class="btn btn-outline-secondary ms-2" href="/AppZaloLogs">
                    <i class="fa fa-list"></i> @L["Menu:AppZaloLogs"]
                </a>
            </abp-column>
        </abp-row>

        <abp-row class="mt-3">
            <abp-column size-md="_4">
                <div class="mb-3">
                    <label class="form-label">@L["FilterText"]</label>
                    <input id="FilterText" class="form-control" />
                </div>
            </abp-column>
            <abp-column size-md="_2">
                <div class="mb-3">
                    <label class="form-label">@L["IsActive"]</label>
                    <select id="IsActive" class="form-select">
                        <option value="">--</option>
                        <option value="true">@L["Yes"]</option>
                        <option value="false">@L["No"]</option>
                    </select>
                </div>
            </abp-column>
            <abp-column size-md="_2" class="d-flex align-items-end">
                <abp-button id="SearchButton" text="@L["Search"]" icon="search" button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>

    <abp-card-body>
        <abp-table striped-rows="true" id="ZaloAuthTable"></abp-table>
    </abp-card-body>
</abp-card>
