@page
@model Genora.MultiTenancy.Web.Pages.AppCalendarSlots.CalendarModel
@using Genora.MultiTenancy.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<MultiTenancyResource> L

@section styles {
    <!-- Ẩn sidebar để full màn hình -->
    <style>
        /* .lpx-sidebar-container {
            display: none !important;
        }

        .lpx-content-container {
            margin-left: 0;
        } */

        .content-wrapper,
        .main-content {
            margin-left: 0 !important;
        }

        #calendar-container {
            height: calc(100vh - 80px);
        }
    </style>

    <!-- FullCalendar CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/main.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <abp-script src="/Pages/AppCalendarSlots/calendar.js" />
}

<input type="hidden" id="GolfCourseId" value="@Model.GolfCourseId" />

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <strong>@L["GolfCourse"]:</strong> @Model.GolfCourseName
        </div>
        <div>
            <a href="/AppCalendarSlots" class="btn btn-secondary btn-sm">
                @L["Back"]
            </a>
        </div>
    </div>

    <div id="calendar-container" class="bg-white rounded shadow-sm">
        <div id="Calendar"></div>
    </div>
</div>
