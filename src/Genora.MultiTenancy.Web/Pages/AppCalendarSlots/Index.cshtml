@page
@using Genora.MultiTenancy.Localization
@using Genora.MultiTenancy.Permissions
@using Genora.MultiTenancy.Web.Pages.AppCalendarSlots
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MultiTenancyResource> L
@inject IAuthorizationService AuthorizationService
@inject Volo.Abp.MultiTenancy.ICurrentTenant CurrentTenant
@model IndexModel;

@section styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <abp-script src="/Pages/AppCalendarSlots/index.js" />
    <abp-style src="/Pages/Index.css" />
}

@{
    var canManage = CurrentTenant.IsAvailable
        ? await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.AppCalendarSlots.Default)
        : await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.HostAppCalendarSlots.Default);
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_5">
                <abp-card-title>@L["AppCalendarSlots"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_7" class="text-end">
                @if (canManage)
                {
                    <abp-button id="AddSlotButton"
                                text="@L["NewCalendarSlot"]"
                                icon="plus"
                                button-type="Outline_Primary" />
                    @* <abp-button id="ExportExcelBtn"
                                text="@L["ExportExcelBtn"]"
                                icon="file-excel"
                                button-type="Outline_Success" />*@
                    <abp-button id="DownloadTemplateBtn"
                                text="@L["DownloadTemplateBtn"]"
                                icon="download"
                                button-type="Outline_Secondary" />
                    <label class="btn btn-outline-success mb-0">
                        <i class="fa fa-upload"></i> @L["ImportExcel"]
                        <input type="file"
                               id="ImportExcelInput"
                               accept=".xlsx"
                               hidden />
                    </label>
                }
                @if (canManage)
                {
                    <abp-button id="OpenCalendarButton"
                                text="@L["ManageCalendar"]"
                                icon="calendar"
                                button-type="Outline_Danger" />
                }
            </abp-column>
        </abp-row>

        <abp-row class="mt-3">
            <abp-column size-md="_4">
                <abp-select asp-for="SelectedGolfCourseId"
                            asp-items="Model.GolfCourseItems"
                            label="@L["GolfCourse"]">
                    @* <option value="">@L["SelectGolfCourse"]</option> *@
                </abp-select>
            </abp-column>
            <abp-column size-md="_2">
                <div class="mb-3">
                    <label class="form-label" for="CalendarFromDate">@L["FromDate"]</label>
                    <input id="CalendarFromDate"
                           name="CalendarFromDate"
                           class="form-control calendar-date-input"
                           type="text" autocomplete="off" />
                </div>
            </abp-column>
            <abp-column size-md="_2">
                <div class="mb-3">
                    <label class="form-label" for="CalendarToDate">@L["ToDate"]</label>
                    <input id="CalendarToDate"
                           name="CalendarToDate"
                           class="form-control calendar-date-input"
                           type="text" autocomplete="off" />
                </div>
            </abp-column>
            <abp-column size-md="_2" class="d-flex align-items-end">
                <div class="mb-3 h-50">
                    <abp-button id="FilterSlotsButton"
                                class="h-100"
                                text="@L["Search"]"
                                button-type="Outline_Primary"
                                icon="search" />
                </div>
            </abp-column>
        </abp-row>
    </abp-card-header>

    <abp-card-body>
        @* <div class="mb-2">
            <strong>@L["CalendarSlotsForDate"]:</strong>
            <span id="SelectedDateText"></span>
        </div> *@

        <abp-table striped-rows="true" id="CalendarSlotsTable"></abp-table>
    </abp-card-body>
</abp-card>