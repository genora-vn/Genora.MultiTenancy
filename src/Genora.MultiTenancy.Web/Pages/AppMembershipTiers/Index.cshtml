@page
@using Genora.MultiTenancy.Localization
@using Genora.MultiTenancy.Permissions
@using Genora.MultiTenancy.Web.Pages.AppMembershipTiers
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MultiTenancyResource> L
@inject IAuthorizationService AuthorizationService
@inject Volo.Abp.MultiTenancy.ICurrentTenant CurrentTenant

@{
    var canCreate = CurrentTenant.IsAvailable
        ? await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.AppMembershipTiers.Create)
        : await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.HostAppMembershipTiers.Create);
}


@section scripts
{
    <abp-script src="/Pages/AppMembershipTiers/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["AppMembershipTiers"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @* HOST: luôn thấy; TENANT: cần quyền *@
                @if (canCreate)
                {
                    <abp-button id="NewMembershipTierButton"
                                text="@L["NewAppMembershipTier"].Value"
                                icon="plus"
                                button-type="Outline_Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="MembershipTiersTable"></abp-table>
    </abp-card-body>
</abp-card>