@page
@using Genora.MultiTenancy.Localization
@using Genora.MultiTenancy.Permissions
@using Genora.MultiTenancy.Web.Pages.AppEmails
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MultiTenancyResource> L
@inject IAuthorizationService AuthorizationService
@inject Volo.Abp.MultiTenancy.ICurrentTenant CurrentTenant

@section scripts {
    <abp-script src="/Pages/AppEmails/index.js" />
    <abp-style src="/Pages/Index.css" />
}

@{
    var canCreate = CurrentTenant.IsAvailable
        ? await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.AppEmails.Create)
        : await AuthorizationService.IsGrantedAsync(MultiTenancyPermissions.HostAppEmails.Create);
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["AppEmails"]</abp-card-title>
            </abp-column>
            @* <abp-column size-md="_6" class="text-end">
                @if (canCreate)
                {
                    <abp-button id="NewEmailButton"
                                text="@L["NewAppEmail"]"
                                icon="plus"
                                button-type="Outline_Primary" />
                }
            </abp-column> *@
        </abp-row>

        <abp-row class="mt-3">
            <abp-column size-md="_4">
                <div class="mb-3">
                    <label class="form-label" for="EmailFilterText">@L["EmailFilterText"]</label>
                    <input id="EmailFilterText" class="form-control" type="text" />
                </div>
            </abp-column>

            <abp-column size-md="_3">
                <div class="mb-3">
                    <label class="form-label" for="EmailStatusFilter">@L["EmailStatus"]</label>
                    <select id="EmailStatusFilter" class="form-select">
                        <option value="">@L["All"]</option>
                        <option value="0">@L["EmailStatus:Pending"]</option>
                        <option value="1">@L["EmailStatus:Sending"]</option>
                        <option value="2">@L["EmailStatus:Sent"]</option>
                        <option value="3">@L["EmailStatus:Failed"]</option>
                        <option value="4">@L["EmailStatus:Abandoned"]</option>
                    </select>
                </div>
            </abp-column>

            <abp-column size-md="_3">
                <div class="mb-3">
                    <label class="form-label" for="BookingCodeFilter">@L["BookingCode"]</label>
                    <input id="BookingCodeFilter" class="form-control" type="text" />
                </div>
            </abp-column>

            <abp-column size-md="_2" class="d-flex align-items-end">
                <div class="mb-3 h-50">
                    <abp-button id="SearchEmailButton"
                                class="h-100"
                                text="@L["Search"]"
                                icon="search"
                                button-type="Outline_Primary" />
                </div>
            </abp-column>
        </abp-row>
    </abp-card-header>

    <abp-card-body>
        <abp-table striped-rows="true" id="EmailsTable"></abp-table>
    </abp-card-body>
</abp-card>
