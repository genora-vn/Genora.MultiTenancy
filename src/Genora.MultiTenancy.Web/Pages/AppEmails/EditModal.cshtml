@page
@using Genora.MultiTenancy.Localization
@using Genora.MultiTenancy.Web.Pages.AppEmails
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<MultiTenancyResource> L

@{
    Layout = null;
    var disabledAttr = Model.IsReadOnly ? "disabled" : null;
}

<form asp-page="/AppEmails/EditModal" method="post" id="EditEmailForm">
    <abp-modal size="ExtraLarge">
        <abp-modal-header title="@(Model.IsReadOnly? L["ViewAppEmail"] : L["EditAppEmail"])"></abp-modal-header>
        <abp-modal-body>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsReadOnly" />

            <div class="d-inline-flex" style="width: 97%; gap: 15px">
                <div class="col-md-8">
                    <abp-input asp-for="EmailInput.Subject" label="@L["Subject"]" disabled="@Model.IsReadOnly" />
                </div>
                <div class="col-md-4">
                    <abp-input asp-for="EmailInput.BookingCode" label="@L["BookingCode"]" disabled="@Model.IsReadOnly" />
                </div>
            </div>

            <div class="d-inline-flex" style="width: 97%; gap: 15px">
                <div class="col-md-6">
                    <abp-input asp-for="EmailInput.ToEmails" label="@L["ToEmails"]" disabled="@Model.IsReadOnly" />
                    <small class="text-muted d-block mt-1">@L["EmailMultiSeparatorHint"]</small>
                </div>
                <div class="col-md-3">
                    <abp-input asp-for="EmailInput.CcEmails" label="@L["CcEmails"]" disabled="@Model.IsReadOnly" />
                </div>
                <div class="col-md-3">
                    <abp-input asp-for="EmailInput.BccEmails" label="@L["BccEmails"]" disabled="@Model.IsReadOnly" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@L["Body"]</label>
                <textarea asp-for="EmailInput.Body" class="form-control" rows="10" disabled="@Model.IsReadOnly"></textarea>
            </div>

            <hr />

            <div class="d-inline-flex" style="width: 97%; gap: 15px">
                <div class="col-md-3">
                    <abp-input asp-for="Email.Status" label="@L["EmailStatus"]" disabled="true" />
                </div>
                <div class="col-md-3">
                    <abp-input asp-for="Email.TryCount" label="@L["TryCount"]" disabled="true" />
                </div>
                <div class="col-md-3">
                    <abp-input asp-for="Email.SentTime" label="@L["SentTime"]" disabled="true" />
                </div>
                <div class="col-md-3">
                    <abp-input asp-for="Email.LastTryTime" label="@L["LastTryTime"]" disabled="true" />
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Email?.LastError))
            {
                <div class="mt-3">
                    <label class="form-label">@L["LastError"]</label>
                    <textarea class="form-control" rows="5" disabled>@Model.Email.LastError</textarea>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Email?.ModelJson))
            {
                <div class="mt-3">
                    <label class="form-label">@L["ModelJson"]</label>
                    <textarea class="form-control" rows="6" disabled>@Model.Email.ModelJson</textarea>
                </div>
            }

        </abp-modal-body>

        @if (Model.IsReadOnly)
        {
            <abp-modal-footer buttons="@(AbpModalButtons.Cancel)"></abp-modal-footer>
        }
        else
        {
            <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
        }
    </abp-modal>
</form>
